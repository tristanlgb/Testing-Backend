
{{#extend "main"}}
  <h1>Products</h1>
  <ul>
    {{#each products}}
      <li>
        <a href="/products/{{this._id}}">{{this.name}}</a> - {{this.price}} USD
        <form action="/carts/{{cartId}}/products/{{this._id}}" method="post">
          <button type="submit">Add to Cart</button>
        </form>
      </li>
    {{/each}}
  </ul>
  <div>
    {{#if hasPrevPage}}
      <a href="/products?limit={{limit}}&page={{prevPage}}&sort={{sort}}&query={{query}}">Previous</a>
    {{/if}}
    {{#if hasNextPage}}
      <a href="/products?limit={{limit}}&page={{nextPage}}&sort={{sort}}&query={{query}}">Next</a>
    {{/if}}
  </div>
{{/extend}}